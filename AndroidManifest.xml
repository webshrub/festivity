<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="com.webshrub.festivity.androidapp" android:versionCode="1"
          android:versionName="1.0">
    <uses-sdk android:minSdkVersion="7" android:targetSdkVersion="16"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-feature android:name="android.hardware.touchscreen" android:required="false"/>
    <uses-feature android:name="android.hardware.touchscreen" android:required="false"/>
    <application android:hardwareAccelerated="true" android:label="@string/application_name" android:icon="@drawable/ic_launcher"
                 android:theme="@style/Theme.AndroidDevelopers">
        <activity android:name=".FestivityHomeActivity" android:label="@string/application_name" android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:label="@string/preferences" android:name=".FestivityPreferenceActivity" android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="com.webshrub.festivity.androidapp.CATEGORY"/>
            </intent-filter>
        </activity>
        <activity android:name=".FestivityItemDetailsActivity"/>
    </application>
</manifest>
