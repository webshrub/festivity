<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.webshrub.festivity.holi.androidapp"
          android:versionCode="1"
          android:versionName="1.0">

    <uses-sdk
            android:minSdkVersion="8"
            android:targetSdkVersion="16"/>

    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.READ_SMS"/>
    <uses-permission android:name="android.permission.WRITE_SMS"/>
    <uses-permission android:name="android.permission.SEND_SMS"/>
    <uses-permission android:name="android.permission.RECEIVE_MMS"/>
    <uses-permission android:name="android.permission.RECEIVE_SMS"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_SETTINGS"/>
    <uses-permission android:name="android.permission.SET_WALLPAPER"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <uses-feature
            android:name="android.hardware.touchscreen"
            android:required="false"/>
    <application
            android:name=".FestivityApplication"
            android:hardwareAccelerated="true"
            android:label="@string/application_name"
            android:icon="@drawable/festivity_icon"
            android:theme="@style/Theme.AndroidDevelopers">
        <activity
                android:label="@string/application_name"
                android:name="com.webshrub.festivity.holi.androidapp.FestivityHomeActivity"
                android:launchMode="singleTop"
                android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:label="@string/preferences"
                android:name="com.webshrub.festivity.holi.androidapp.FestivityPreferenceActivity"
                android:launchMode="singleTop"
                android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="com.webshrub.festivity.androidapp.CATEGORY"/>
            </intent-filter>
        </activity>
        <activity
                android:label="@string/application_name"
                android:name="com.webshrub.festivity.holi.androidapp.FestivityItemDetailsActivity"
                android:screenOrientation="portrait"/>
        <activity
                android:label="@string/action_label_about"
                android:name=".FestivityAboutActivity"
                android:screenOrientation="portrait"/>

        <provider
                android:name="com.webshrub.festivity.holi.androidapp.FestivityContentProvider"
                android:authorities="com.webshrub.festivity.holi.androidapp"/>
        <activity
                android:name="com.google.ads.AdActivity"
                android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"/>
    </application>
</manifest>
