<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="com.webshrub.festivity.holi.androidapp" android:versionCode="1"
          android:versionName="1.0">
    <uses-sdk android:minSdkVersion="7" android:targetSdkVersion="16"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.READ_SMS"/>
    <uses-permission android:name="android.permission.WRITE_SMS"/>
    <uses-permission android:name="android.permission.SEND_SMS"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_SETTINGS"/>
    <uses-feature android:name="android.hardware.touchscreen" android:required="false"/>
    <application android:name=".FestivityApplication" android:hardwareAccelerated="true" android:label="@string/application_name"
                 android:icon="@drawable/ic_launcher" android:theme="@style/Theme.AndroidDevelopers">
        <activity android:label="@string/application_name" android:name="com.webshrub.festivity.holi.androidapp.FestivityHomeActivity"
                  android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:label="@string/preferences" android:name="com.webshrub.festivity.holi.androidapp.FestivityPreferenceActivity"
                  android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="com.webshrub.festivity.androidapp.CATEGORY"/>
            </intent-filter>
        </activity>
        <activity android:label="@string/contact_picker" android:name="com.webshrub.festivity.holi.androidapp.ContactPickerActivity"
                  android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="com.webshrub.festivity.androidapp.CATEGORY"/>
            </intent-filter>
        </activity>
        <activity android:label="@string/application_name" android:name="com.webshrub.festivity.holi.androidapp.FestivityItemDetailsActivity"/>
        <activity android:name=".WallpaperItemDetailsActivity" android:label="@string/application_name"/>
    </application>
</manifest>
